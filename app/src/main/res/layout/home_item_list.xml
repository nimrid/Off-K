<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    app:cardElevation="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/rec_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Home"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rec_home_price"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:hint="Rent fee"
            android:layout_marginRight="5dp"
            android:textAlignment="viewEnd"/>

        <ImageView
            android:id="@+id/rec_home_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/rec_home_name"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/rec_home_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Location"
            android:layout_below="@id/rec_home_image"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/home_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Description"
            android:layout_below="@id/rec_home_location"
            android:textAlignment="center"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/home_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="verify"
            android:layout_below="@id/home_desc"
            android:textAlignment="center"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>